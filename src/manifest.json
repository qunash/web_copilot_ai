{
  "manifest_version": 3,
  "name": "Web Copilot AI",
  "version": "1.0.0",
  "description": "AI-powered browser assistant that performs actions based on natural language instructions",
  "action": {
    "default_title": "Click to open Web Copilot AI side panel"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content-scripts/clickSimulator.js",
        "content-scripts/pageInteractions.js"
      ],
      "run_at": "document_start"
    }
  ]
}
